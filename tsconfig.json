{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["dom", "es2015", "es2017"],
    "types": ["node", "react"],
    "jsx": "react",
    "strict": true, 
    "baseUrl": "./src",
    "noImplicitAny": false,
    "paths": {
      "*": ["types/*"]
    },
    "moduleResolution": "node",

  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
